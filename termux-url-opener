#!/bin/bash
clear
url=$1
echo "   All-in-one Download Script by C-Rock"
echo "═ ═ ═ ═ ═ Last updated 1 Jan 2021 ═ ═ ═ ═ ═ ═"
echo "╔═══════════ Select an Option ═══════════════"
echo "╠═➤ 1: Download with youtube-dlc"
echo "╠═➤ 2: Download with ffmpeg(m3u8/m3u)"
echo "╠═➤ 3: Download page with wget (Recursive)"
echo "╠═➤ 4: Download files with wget (Recursive)"
echo "╠═➤ 5: Download with spotdl (Spotify All-in-one)"
echo "╠═➤ 6: Download with youtube-dlc and extract audio"
echo "╠═➤ 7: Download with youtube-dl"
echo "╠═➤ 8: Download with youtube-dl and extract audio"
echo "╠═➤ 9: Download with youtube-dl and embed all subtitles"
echo "╠═➤ 10: Download with youtube-dlc and embed all subtitles"
echo "╠═➤ 11: Download with youtube-dl and embed subtitle"
echo "╠═➤ 12: Download with youtube-dlc and embed subtitle"
echo "╠═➤ 13: Download with you-get"
echo "╚═➤ Default: Download with youtube-dlc"
read n
if [ "$n" == '2' ]; then
echo "Output Filename:"
read name
ffmpeg -i "$url" -c copy -bsf:a aac_adtstoasc ./storage/shared/media/"$name"
else
if [ "$n" == '3' ]; then
wget -P "./storage/shared/media/wget/" -c --mirror  --recursive --no-clobber  --page-requisites --html-extension --convert-links -e robots=off --restrict-file-names=windows --no-parent "$url"
else
if [ "$n" == '4' ]; then
wget -P "./storage/shared/media/wget/" -c --mirror  --recursive --no-clobber  -e robots=off --restrict-file-names=windows --no-parent -R "index.html*" "$url"
else
if [ "$n" == '5' ]; then 
[ ! -d "./storage/shared/media/spotdl" ] && mkdir "./storage/shared/media/spotdl"
test -f  "./.spotdl_playlist"  && rm "./.spotdl_playlist.txt"
test -f  "./.spotdl_album"  && rm "./.spotdl_album.txt"
[[ $url == *"track"* ]] && spotdl --output-file "./storage/shared/media/spotdl/{artist}/{artist} - {track-name}.{output-ext}" --song "$url" -q best --output-ext mp3
[[ $url == *"playlist"* ]] && spotdl --playlist "$url" --write-to  "./.spotdl_playlist.txt"  && spotdl --output-file "./storage/shared/media/spotdl/{artist}/{artist} - {track-name}.{output-ext}" --list "./.spotdl_playlist.txt" -q best --output-ext mp3 && rm -f "./.spotdl_playlist.txt"
[[ $url == *"album"* ]] && spotdl --album "$url" --write-to  "./.spotdl_album.txt" && spotdl --output-file "./storage/shared/media/spotdl/{artist}/{album}/{artist} - {track-name}.{output-ext}" --list "./.spotdl_album.txt" -q best --output-ext mp3 && rm -f "./.spotdl_album.txt"
else
