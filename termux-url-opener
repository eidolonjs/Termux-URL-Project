[ ! -d "./storage/shared/media/youtube-dl" ] && mkdir "./storage/shared/media/youtube-dl"
youtube-dlc -no-mtime --format "(bestaudio[acodec^=opus]/bestaudio)/best" --force-ipv4 --ignore-errors --no-continue --no-overwrites --merge-output-format "mkv" --extract-audio --audio-format "mp3" --audio-quality 0 "$url" -o "./storage/shared/media/youtube-dl/%(title)s.%(ext)s"
else
if [ "$n" == '7' ]; then
[ ! -d "./storage/shared/media/youtube-dl" ] && mkdir "./storage/shared/media/youtube-dl"
